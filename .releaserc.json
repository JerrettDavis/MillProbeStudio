{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "ğŸš€ Features"
            },
            {
              "type": "fix",
              "section": "ğŸ› Bug Fixes"
            },
            {
              "type": "perf",
              "section": "âš¡ Performance Improvements"
            },
            {
              "type": "revert",
              "section": "âª Reverts"
            },
            {
              "type": "docs",
              "section": "ğŸ“š Documentation"
            },
            {
              "type": "style",
              "section": "ğŸ’ Styles"
            },
            {
              "type": "refactor",
              "section": "ğŸ“¦ Code Refactoring"
            },
            {
              "type": "test",
              "section": "ğŸš¨ Tests"
            },
            {
              "type": "build",
              "section": "ğŸ›  Build System"
            },
            {
              "type": "ci",
              "section": "âš™ï¸ Continuous Integration"
            },
            {
              "type": "chore",
              "section": "â™»ï¸ Chores"
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md",
        "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines."
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": false
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "dist.zip",
            "label": "Production Build (${nextRelease.gitTag})"
          }
        ],
        "addReleases": "bottom"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "package.json",
          "package-lock.json",
          "CHANGELOG.md"
        ],
        "message": "chore(release): v${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
